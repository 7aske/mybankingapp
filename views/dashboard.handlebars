<div class="container text-center">
    {{#if user}}
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add/Link account</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/accounts">
                        <div class="form-group row">
                            <label for="username" class="col-sm-2 col-form-label">User id</label>
                            <div class="col-sm-10">
                                <input type="text" readonly class="form-control-plaintext noselect" name="id" id="id" value="{{user._id}}">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="accountNumber" class="col-sm-2 col-form-label">Account</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" style="-webkit-appearance: none;-moz-appearance:textfield;" id="accountNumber"
                                    name="accountNumber" placeholder="Account number">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="balance" class="col-sm-2 col-form-label">Balance</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" style="-webkit-appearance: none;-moz-appearance:textfield;" id="balance" name="balance"
                                    placeholder="Balance">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-sm-2 col-form-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                            </div>
                            <label for="confirm" class="col-sm-2 col-form-label">Confirm</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm password">
                            </div>
                        </div>
                        <div class="modal-footer form-group row">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <button class="btn btn-info m-3" data-toggle="modal" data-target="#exampleModalCenter">Add/Link account</button>
        {{#if accounts}} {{#each accounts}}
        <div class="col-12">
            <div class="card card-header bg-info text-light noselect" data-toggle="collapse" data-target="#{{this._id}}" aria-expanded="false"
                aria-controls="{{this._id}}">
                Account ID: {{this._id}}
            </div>
            <div class="collapse p-0" id="{{this._id}}">
                <div class="card card-body">
                    <ul class="list-group">
                        <li class="list-group-item">Account number: {{this.accountNumber}}</li>
                        <li class="list-group-item">Balance: {{this.balance}}</li>
                        <li class="list-group-item">Payments: {{this.payments}}</li>
                        <li class="list-group-item">Deposits: {{this.deposits}}</li>
                    </ul>
                </div>
            </div>
        </div>
        {{/each}} {{/if}}
    </div>
    <div class="row">
        <div class="container">
            <ul class="list-group">
                <div class="card card-header bg-info text-light noselect">
                    User information
                </div>
                <div class="list-group-item">
                    <label for="created">Date created:</label>
                    <li style="list-style-type: none" id="created">{{user.dateCreated}}</li>
                </div>
                <div class="list-group-item">
                    <label for="login">Last login:</label>
                    <li style="list-style-type: none" id="login">{{user.lastLogin}}</li>
                </div>
                <li class="list-group-item">First name: {{user.firstName}}</li>
                <li class="list-group-item">Last Name: {{user.lastName}}</li>
                <li class="list-group-item">Company: {{user.company}}</li>
                <li class="list-group-item">Address: {{user.address}}</li>
                <li class="list-group-item">City: {{user.city}}</li>
                <li class="list-group-item">Country: {{user.country}}</li>
                <div class="list-group-item">
                    <label for="birth">Birth date:</label>
                    <li style="list-style-type: none" id="birth">{{user.birthDate}}</li>
                </div>
                <li class="list-group-item">Phone number: {{user.phone}}</li>

            </ul>
        </div>
    </div>
    {{/if}}
</div>
<script type="text/javascript">
    let created = document.getElementById('created');
    let birth = document.getElementById('birth');
    let login = document.getElementById('login');

    let formatDate = (field) => {
        let date = new Date(field.innerText);
        let year = date.getFullYear();
        let month = date.getMonth();
        let day = date.getDate();

        field.innerText = day + '/' + month + '/' + year;
    }
    let formatDatePrecise = (field) => {
        let date = new Date(field.innerText);
        let year = date.getFullYear();
        let month = date.getMonth();
        let day = date.getDate();
        let hours = date.getHours();
        let minutes = date.getMinutes();
        let seconds = date.getSeconds();

        field.innerText = day + '/' + month + '/' + year + ' ' + hours + ':' + minutes + ':' + seconds;
    }
    formatDate(created);
    formatDate(birth);
    formatDatePrecise(login);
    document.querySelectorAll('.nav-item')[0].classList.add('active');
</script>
